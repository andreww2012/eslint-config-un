{
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "yaml",
    "toml",
    "json",
    "jsonc",
    "json5",
    "markdown",
    "md",
    "css",
    "postcss",
    "svelte",
    "html",
  ],

  "[javascript][typescript][typescriptreact][vue][css][scss][postcss][svelte]": {
    // Note: do NOT set `editor.formatOnSaveMode` to any value with `modifications` -
    // may incorrectly run prettier with `prettier-disabled` directives
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  "typescript.tsdk": "node_modules\\typescript\\lib",
  "cSpell.enabled": true,
}
